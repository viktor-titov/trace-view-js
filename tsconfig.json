{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2020",
        "allowJs": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode",
        "webpack",
        "dist",
        "examples",
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx",
        "**/*.test.ts*"
    ]
}